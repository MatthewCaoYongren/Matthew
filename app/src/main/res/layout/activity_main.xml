<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Fragment的布局容器 -->
    <LinearLayout
        android:id="@+id/linearLayout_main_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"/>

    <!-- RadioGroup用于选项卡 -->
    <LinearLayout
        android:id="@+id/linearLayout_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearlayout_homepage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClickView"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_main_homepage"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:onClick="onClickView"
                android:src="@drawable/selector_main_bottom_homepage"/>

            <TextView
                android:id="@+id/textView_main_homepage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClickView"
                android:text="@string/main_home_page"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_group"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClickView"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_main_classify"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:onClick="onClickView"
                android:src="@drawable/selector_main_bottom_group"/>

            <TextView
                android:id="@+id/textView_main_classify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClickView"
                android:text="@string/main_classify_page"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_shoppingcart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClickView"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_main_shoppingcart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:onClick="onClickView"
                android:src="@drawable/selector_main_bottom_shoppingcart"/>

            <TextView
                android:id="@+id/textView_main_shoppingcart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClickView"
                android:text="@string/main_shopping_car_page"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_personalcenter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:onClick="onClickView"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_main_personal_center"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:onClick="onClickView"
                android:src="@drawable/selector_main_bottom_personalcenter"/>

            <TextView
                android:id="@+id/textView_main_personal_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClickView"
                android:text="@string/main_person_page"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
